.row
  .col-md-12
    .panel.panel-info
      .panel-heading
        Order
      .panel-body
        .col-sm-12.col-md-12
          #order_totals
            %table
              %tr
                %td
                  Item Quantity Total:
                  %br
                  Subtotal
                  - if warehouse?
                    %br
                    Sales Tax
                    %br
                    Order Total
                %td
                  %span#qtytotal
                    0 items
                  %br
                  %span#subtotal
                    $0
                  - if warehouse?
                    %br
                    %span#salestax
                      $0.00
                    %br
                    %span#ordertotal
                      $0.00
              - if (params[:controller] == 'orders' && params[:action] == 'edit')
                %tr
                  %td.timestamps{:colspan => "2"}
                    Created on: 
                    = l @order.created_at, :format => :default
                    %br
                    Modified on:
                    = l @order.updated_at, :format => :default
            - if tradeshow?
              %ul#by_ship_date
                - @order.by_ship_date.each do |k,v|
                  %li
                    = k
                    %span.ship_date_item= number_to_currency v
            - else
              #by_ship_date{:style => "display:none;"}

          = form_tag({:action=>'create'}, :multipart => true) do
            %table
              %tr
                %td
                  %label{ :for => "dump_file" }
                    Select a CSV File :
                    %br
                    = file_field_tag :file
                    = submit_tag 'Submit', :class => 'btn btn-primary'
          = link_to "click here to see a sample CSV file", "/sample_export_lineitems.csv"
      
          #error
            = flash[:message]
          #coupon
            - if session[:coupon].present?
              Applied Coupon: 
              = session[:coupon]
            - else
              = form_tag({:action => 'add_coupon', :id => @order}, :remote => true, :id => 'add_coupon_form', :onsubmit => "$('warning').hide();") do
                .field
                  = label_tag :coupon, 'Enter Coupon Code:'
                  %br
                  = text_field_tag :coupon, nil, :tabindex => 1, :onFocus => "this.select();", :maxlength => 12
                  = submit_tag :add, :class => 'btn btn-primary'
           
          = form_tag({:action => 'add_item', :id => @order}, :remote => true, :id => 'add_item_form', :onsubmit => "$('warning').hide();") do
            .field
              = label_tag :item, 'Item Number or UPC Scan'
              %span.required *
              %br
              = text_field_tag :upc, nil, :tabindex => 1, :onFocus => "this.select();", :maxlength => 12, :class => 'required'
              = submit_tag :add, :class => 'btn btn-primary'
              %span#warning{ :style => "display:none"}
                PRODUCT NOT FOUND!

          :javascript
            $('#upc').focus();
          = form_for(@order) do |f|
            = f.error_messages
            %table.products{:width => "100%"}
              %tr
                %th{:align => 'left', :width => '50'} Item Number
                %th{:align => 'left', :width => '150'} Description
                - if tradeshow?
                  %th{:align => 'center', :width => '100'} Launch Month
