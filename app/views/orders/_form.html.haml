- form_tag({:action => 'add_item', :id => @order}, :remote => true, :id => 'add_item_form') do
  .field
    = label_tag :item
    %br
    = text_field_tag :upc, nil, :tabindex => 1, :onFocus => "this.select()"
  .actions
    = submit_tag :add
:javascript
  Form.Element.focus($('upc'));
= form_for(@order) do |f|
  = f.error_messages
  %table{:width => "100%", :style => "margin-bottom: 25px"}
    %tr#products
      %th{:align => 'left'} Item Number
      %th{:align => 'left'} Description
      - if tradeshow?
        %th{:align => 'center'} Launch Month
      %th{:align => 'center'} Quantity
      %th{:align => 'center'} Unit
      %th{:align => 'right'} Unit Price
      %th{:align => 'right'} Extended Price
    = render :partial => 'order_item', :collection => @order.order_items
    
  %hr
  %div{:style => "float: right"}
    .field
      = f.label :sub_total, 'Sub Total', :style => "font-weight: bold"
      = f.text_field :sub_total, :disabled => true, :size => "8"
    - if warehouse?
      .field#sales_tax
        = f.label :sales_tax, 'Sales Tax', :style => "font-weight: bold"
        = f.text_field :sales_tax, :disabled => true, :size => "8"
  - if warehouse?
    .field
      = f.label :payment_method
      %br
      = f.radio_button :payment_method, "Credit Card", :tabindex => i=2
      Credit Card
      = f.radio_button :payment_method, "Cash", :tabindex => i+=1
      Cash
    .field
      = f.label :tax_exempt
      %br
      = f.check_box :tax_exempt, :tabindex => i+=1, :onclick => "show_sales_tax(this.checked)"
    .field#tax_exempt_number{:style => "display:none"}
      = f.label :tax_exempt_number
      %br
      = f.text_field :tax_exempt_number, :tabindex => i+=1
  %div{:style => "float: left; margin-right: 50px"}
    .field
      = f.label :contact, 'Contact Person'
      %br
      = f.text_field :contact, :tabindex => "#{tradeshow? ? i=2 : i+=1}"
    .field
      = f.label :business, 'Business Name'
      %br
      = f.text_field :business, :tabindex => i+=1
    .field
      = f.label :email, 'Email Address'
      %br
      = f.text_field :email, :tabindex => i+=1
    .field
      = f.label :phone, 'Phone Number'
      %br
      = f.text_field :phone, :tabindex => i+=1
    .field
      = f.label :address
      %br
      = f.text_field :address, :tabindex => i+=1
  .field{:style => "float: left"}
    = f.label :notes
    %br
    = f.text_area :notes, :tabindex => i+=1, :rows => "10"
  .clearfloat
  .actions
    = f.submit :tabindex => i+=1
:javascript
  function update_totals(){
    var total = 0
    var salestax = 0
    $$('.order_item_row').each(function(row){
      line_total = row.down('.quantity').value * row.down('.price').value
      row.down('.item_total').innerHTML = '$' + line_total
      total = total + line_total
      salestax = total * .0875
    });
    $('order_sub_total').value = total
    #{warehouse? ? "$('order_sales_tax').value = salestax" : nil}
  }
  
  function show_sales_tax(value){
    if (value) {
      $('tax_exempt_number').show()
      #{warehouse? ? "$('sales_tax').hide()" : nil}
    } else {
      $('tax_exempt_number').hide()
      #{warehouse? ? "$('sales_tax').show()" : nil}
    }
  }
