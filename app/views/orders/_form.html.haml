            :javascript
              $('#add_item_form').parsley();

              function update_totals(){
                var subtotal = 0
                var salestax = 0
                var total = 0
                var total_qty = 0
                var total_by_ship_date = {}
                $('#by_ship_date').html('');
                $('.order_item_row').each(function(index, row){
                  row = $(row)
                  line_qty_total = row.find('input.quantity').val() * 1
                  total_qty = total_qty + line_qty_total

                  line_total = Math.round((row.find('.quantity').val() * row.find('.price').val()) * 100) / 100;

                  ship_date = row.data('ship-date');
                  if ($('#li_sd_'+ship_date).size > 0) {
                    total_by_ship_date[ship_date]+=line_total;
                    $('#total_sd_'+ship_date).html('$'+total_by_ship_date[ship_date]);
                  } else{
                    total_by_ship_date[ship_date]=line_total;
                    $('#by_ship_date').append('<li id="li_sd_'+ship_date+'">'+ship_date+' <span class="ship_date_item" id="total_sd_'+ship_date+'">$'+total_by_ship_date[ship_date]+'</span></li>');
                  };
                  row.find('.item_total').html('$' + line_total)
                  subtotal = subtotal + line_total
                  salestax = Math.round(subtotal * 8.75) / 100
                  total = subtotal + salestax
                });
                $('#order_sub_total').val(subtotal)
                #{warehouse? ? "$('#order_sales_tax').val(salestax)" : nil}
                #{warehouse? ? "$('#order_total').val(total)" : nil}

                $('#qtytotal').html(total_qty + ' items')
                $('#subtotal').html('$' + subtotal)
                #{warehouse? ? "$('#salestax').html('$' + salestax)" : nil}
                #{warehouse? ? "$('#ordertotal').html('$' + total)" : nil}

                //$('upc').focus();
              }

              function show_sales_tax(value){
                if (value) {
                  $('tax_exempt_number').show()
                  #{warehouse? ? "$('#sales_tax').hide()" : nil}
                  #{warehouse? ? "$('#total').hide()" : nil}
                  #{warehouse? ? "$('#salestax').hide()" : nil}
                  #{warehouse? ? "$('#ordertotal').hide()" : nil}
                } else {
                  $('tax_exempt_number').hide()
                  #{warehouse? ? "$('#sales_tax').show()" : nil}
                  #{warehouse? ? "$('#total').show()" : nil}
                  #{warehouse? ? "$('#salestax').show()" : nil}
                  #{warehouse? ? "$('#ordertotal').show()" : nil}
                }
              }

              function product_not_found(value){
                if (value) {
                  $('#warning').html('this field cannot be blank')
                  $('#warning').show();
                } else {
                  $('#warning').html('product not found')
                  $('#warning').show();
                  $('#order_notes').val('product not found: ' + $('#upc').value + '\n');
                  $('#order_notes').focus();
                }
              }
