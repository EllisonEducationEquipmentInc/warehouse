%h1 Listing orders

%table
  %thead
    %tr
      %th ID
      %th Email
      %th Sub total
      %th Sales tax
      %th Total
      %th{ :colspan => 3 }
  
  %tbody
    - for order in @orders
      %tr{ :class => cycle(:odd, :even) }
        %td= order.id
        %td= order.email
        %td= number_to_currency order.sub_total
        %td= number_to_currency order.sales_tax
        %td= number_to_currency order.total
        %td= link_to 'Show', order
        %td= link_to 'Edit', edit_order_path(order)
        %td= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete
%br
= will_paginate @orders
%br
= link_to 'New order', new_order_path
%br
= link_to "export to csv", :action => 'export_to_csv'
