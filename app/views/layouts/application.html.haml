!!!
%html
  %head
    %title== Products: #{ controller.action_name }
    = stylesheet_link_tag 'scaffold', :media => "all"
    = stylesheet_link_tag 'mobile' if mobile_device?
    = javascript_include_tag :defaults, 'sound'
    = csrf_meta_tag
  
  %body
    #container
      %p 
        - if mobile_device?
          = link_to "Full Site", :mobile => 0 
        - else  
          = link_to "Mobile Site", :mobile => 1
      %p.notice= notice
      = link_to "Products", products_path, :class => 'button'
      = link_to "Orders", orders_path, :class => 'button'
      = link_to "New Sale", new_order_path, :class => 'button'
      .clear
      = yield
