!!!
%html
  %head
    %title== #{ @title? @title : app_mode}
    = stylesheet_link_tag 'scaffold', :media => "all"
    = stylesheet_link_tag 'site', :media => "all"
    = stylesheet_link_tag 'print', :media => "print"
    = stylesheet_link_tag 'mobile' if mobile_device?
    = javascript_include_tag :defaults, 'sound'
    = csrf_meta_tag
  
  %body
    #container
      %p.dontprint 
        - if mobile_device?
          = link_to "Full Site", :mobile => 0 
        - else  
          = link_to "Mobile Site", :mobile => 1
      %p.dontprint.notice= notice
      %h2.dontprint== App mode: #{app_mode}
      = link_to "Products", products_path, :class => 'button dontprint'
      = link_to order_name, orders_path, :class => 'button dontprint'
      = link_to "New Sale", new_order_path, :class => 'button dontprint'
      .clear
      = yield
