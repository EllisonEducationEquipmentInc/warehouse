.row
  .col-md-12
    .panel.panel-info
      .panel-heading
        Customer
      .panel-body
        .col-sm-12.col-md-12
          = form_for(@customer) do |f|
            = f.error_messages
            .form-group
              .field
                = f.label :ax_customer_number, class: "form-control"
                %span.required *
                %br
                = f.text_field :ax_customer_number, :maxlength => 12, :size => 15
            .form-group
              .field
                = f.label :company_name
                %br
                = f.text_field :company_name, class: "form-control"
            .form-group
              .field
                = f.label :full_name
                %br
                = f.text_field :full_name, class: "form-control"
            .form-group
              .field
                = f.label :customer_class
                %span.required *
                %br
                = f.text_field :customer_class, class: "form-control"
            .form-group
              .field
                = f.label :address
                %br
                = f.text_field :address, class: "form-control"
            .form-group
              .field
                = f.label :city
                %br
                = f.text_field :city, class: "form-control"
            .form-group
              .field
                = f.label :state
                %br
                = f.text_field :state, class: "form-control"
            .form-group
              .field
                = f.label :zip
                %br
                = f.text_field :zip, class: "form-control"
            .form-group
              .field
                = f.label :country
                %br
                = f.text_field :country, class: "form-control"
            .form-group
              .field
                = f.label :phone
                %br
                = f.text_field :phone, class: "form-control"
            .form-group
              .field
                = f.label :email
                %br
                = f.text_field :email, class: "form-control"

            .form-group
              .actions
                = f.submit :class => 'btn btn-primary'
