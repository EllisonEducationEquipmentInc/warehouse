%h1 Listing customers
= link_to 'all', customers_path unless params[:q].blank?
= form_tag(customers_path, :method => :get) do
  = text_field_tag :q, nil, placeholder: "ax, company, zip"
  = submit_tag "search"
%table
  %thead
    %tr
      %th Customer No.
      %th Company Name
      %th City
      %th State
      %th Zip
      %th Country
      %th Phone
      %th Email
  %tbody
    - for customer in @customers
      %tr{ :class => cycle(:odd, :even) }
        %td= customer.ax_customer_number
        %td= customer.company_name
        %td= customer.city
        %td= customer.state
        %td= customer.zip
        %td= customer.country
        %td= customer.phone
        %td= customer.email
        %td= link_to 'Show', customer
        %td= link_to 'Edit', edit_customer_path(customer)
        %td= link_to 'Destroy', customer, :confirm => 'Are you sure?', :method => :delete

%br
= paginate @customers
%br
= link_to 'New customer', new_customer_path
%br
= link_to 'Upload customer csv file', :action => :import
